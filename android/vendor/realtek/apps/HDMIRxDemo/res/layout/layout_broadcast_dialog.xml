<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginBottom="25px"
        android:gravity="center">

        <!-- IP group -->
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30px"
            android:gravity="center">

            <TextView android:id="@+id/ip_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                style="@style/TextAppearance.Medium" />

            <NumberPicker android:id="@+id/ip_numberpicker1"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_common"
                style="@style/TextAppearance.Medium" />

            <NumberPicker android:id="@+id/ip_numberpicker2"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/ip_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_common"
                style="@style/TextAppearance.Medium" />

            <NumberPicker android:id="@+id/ip_numberpicker3"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/ip_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_common"
                style="@style/TextAppearance.Medium" />

            <NumberPicker android:id="@+id/ip_numberpicker4"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- vertical separator line -->
        <include android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="20px"
            android:layout_marginBottom="20px"
            layout="@layout/separator_line"/>

        <!-- Port group -->
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30px"
            android:gravity="center">

            <TextView android:id="@+id/port_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                style="@style/TextAppearance.Medium" />

            <NumberPicker android:id="@+id/port_numberpicker"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/ok_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/focus_green"
        android:gravity="center">

        <TextView android:id="@+id/ok_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26px"
            android:layout_marginTop="26px"
            android:textColor="@color/focus_white"
            style="@style/TextAppearance.Medium"/>
    </LinearLayout>
</LinearLayout>
